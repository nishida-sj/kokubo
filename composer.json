{
    "name": "kokubo/nursery-website",
    "description": "小久保植樹園 - 企業ウェブサイト",
    "type": "project",
    "keywords": ["php", "nursery", "landscaping", "cms", "website"],
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-gd": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "test": "echo 'No tests configured'",
        "check-syntax": "find . -name '*.php' -not -path './vendor/*' -exec php -l {} \\;"
    },
    "config": {
        "platform": {
            "php": "8.0"
        },
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}