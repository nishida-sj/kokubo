{
    "name": "kokubo/construction-website",
    "description": "小久保工務店 - 企業ウェブサイト",
    "type": "project",
    "keywords": ["php", "construction", "cms", "website"],
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@create-upload-dirs",
            "@set-permissions"
        ],
        "post-update-cmd": [
            "@create-upload-dirs",
            "@set-permissions"
        ],
        "create-upload-dirs": [
            "mkdir -p public/uploads/works",
            "mkdir -p public/uploads/temp"
        ],
        "set-permissions": [
            "chmod 755 public/uploads",
            "chmod 755 public/uploads/works",
            "chmod 755 public/uploads/temp"
        ],
        "test": "phpunit",
        "check-syntax": "find . -name '*.php' -not -path './vendor/*' -exec php -l {} \\;"
    },
    "config": {
        "platform": {
            "php": "8.0"
        },
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}